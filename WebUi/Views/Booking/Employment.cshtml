@model WebUi.Controllers.EmploymentForm

<div class="inner_container">
    <div class="breadcums_block">
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active">Join Us</li>
        </ol>
    </div>
    <div class="page_title">
        <h1>Join Us</h1>
    </div>
    <script type="text/javascript">
        function validate() {
            if (document.joinform.firstname.value == "") {
                alert("Please provide your first name!");
                document.joinform.firstname.focus();
                return false;
            }
            if (document.joinform.lastname.value == "") {
                alert("Please provide your last name!");
                document.joinform.lastname.focus();
                return false;
            }
            if (document.joinform.age.value == "") {
                alert("Please provide your age!");
                document.joinform.age.focus();
                return false;
            }
            if (document.joinform.email.value == "") {
                alert("Please provide your valid email!");
                document.joinform.email.focus();
                return false;
            }
        }
    </script>
    <script type="text/javascript" src="js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="js/jquery.placeholder.min.js"></script>
    <script type="text/javascript" src="js/joinus.js"></script>
    <div class="inner_container_area">
        <div class="booking_panel">
            <form class="form-horizontal" method="post" name="joinfor" id="joinform"
                  action="/ThankYouEmployment" onsubmit="return(validate());" novalidate="novalidate"
                  enctype="multipart/form-data">
                <div class="form-group">
                    <label for="firstname" class="col-sm-4 control-label custom_label_text">
                        First
                        Name
                    </label>
                    <span class="col-sm-8">
                        <input type="text" class="form-control custom_box" name="firstname"
                               id="firstname" placeholder="" value="">
                    </span>
                    <div class="col-sm-8"></div>
                </div>
                <div class="form-group">
                    <label for="lastname" class="col-sm-4 control-label custom_label_text">
                        Last
                        Name
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control custom_box" name="lastname"
                               id="lastname" placeholder="" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="age" class="col-sm-4 control-label custom_label_text">Age</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control custom_box" name="age" id="age"
                               placeholder="" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="email"
                           class="col-sm-4 control-label custom_label_text">Email</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control custom_box" name="email" id="email"
                               placeholder="" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="phone" class="col-sm-4 control-label custom_label_text">
                        Phone
                        No.
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control custom_box" name="phone" id="phone"
                               placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="request" class="col-sm-4 control-label custom_label_text">
                        Short
                        Description
                    </label>
                    <div class="col-sm-8">
                        <textarea name="sdescription" id="sdescription" cols="45" rows="5"
                                  class="form-control custom_box"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="file_name" class="col-sm-4 control-label custom_label_text">
                        Upload
                        Image
                    </label>
                    <div class="col-sm-8">
                        <input type="file" id="upfile" class="custom_box"
                               asp-for="FileUpload"
                               style="margin-top:8px;">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <input type="submit" name="submit" class="btn vignate_color" value="Submit">
                    </div>
                </div>
            </form>
            <style>
                .error {
                    color: #fff;
                }

                #spambot {
                    color: #fff;
                }
            </style>
            <script type="text/javascript">
                $('#joinform').validate({
                    debug: false,
                    rules: {
                        message: {
                            required: true,
                            minlength: 10,
                            maxlength: 255
                        },
                        captcha: {
                            required: true,
                            captcha: true
                        }
                    },
                    messages: {
                        fullname: "First name field required.",
                        subject: "Hotel room number field required.",
                        email: {
                            required: "Email address required",
                            email: "Email address must be in the format name@domain.com."
                        },
                        chkCaptcha: {
                            required: "* Required"
                        }
                    }
                });
            </script>
        </div>
    </div>
</div>